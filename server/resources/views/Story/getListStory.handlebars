<table class="table mt-4">
    <thead class="thead-dark">
        <tr>
            <th>description</th>
            <th>content</th>
            <th>likes</th>
            <th>author</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each listStory}}
        <tr>
            <td><a href="/user/{{this.slug}}">{{this.description}}</a></td>
            <td>{{this.content}}</td>
            <td>{{this.likes}}</td>
            <td>{{this.user.name}}</td>
            <td>
                <button type="button" class="btn btn-warning"><a href="/story/edit/{{this._id}}">Sửa</a></button>
                <button type="button" id="{{this._id}}" class="btn btn-danger btn-delete">Xóa</button>
                <button type="button" class="btn btn-success"><a href="/story/likes/{{this._id}}">likes</a></button>
                <button type="button" class="btn btn-secondary"><a
                        href="/story/unlikes/{{this._id}}">unlikes</a></button>

            </td>

        </tr>
        {{/each}}
    </tbody>
</table>

<form name='delete_from' method="POST"></form>

<script>
    const courseList = document.querySelector('.table')
    const deleteFrom = document.delete_from

    courseList.onclick = function (e) {
        const btnDelete = e.target.closest('.btn-delete')
        if (btnDelete) {
            deleteFrom.action = '/story/' + btnDelete.id + '?_method=DELETE'
            deleteFrom.submit()
        }
    }
</script>